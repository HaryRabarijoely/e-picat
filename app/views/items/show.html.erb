<p id="notice"><%= notice %></p>



<div class="d-flex justify-content-center align-items-center flex-column text-center col-12" style="height:70vh">
    <div class="card border-secondary mb-3">
      <div class="media d-flex justify-content-center">
        <a href="<%= @item.image_url %>" class="d-block">

          <%if @item.picture.attached?%>
            <%= image_tag @item.picture, alt: @item.title, class: "img-fluid", style: "max-height: 300px" %>
          <%else%>
            <p>=== Il n'y a pas de photo attachée au produit ===</p>
          <%end%>

          </a>
          <div class="media-body d-flex flex-column justify-content-between p-4 p-md-5">
            <h3><%= @item.title %></h3>
            <em><%= @item.description %></em>
            <br>
            <strong><%= @item.price %> <i class="fab fa-bitcoin"></i></strong>
            <%= link_to "Ajouter à mon panier", cart_path(@item), method: :put, class: "btn btn-outline-primary my-3" %>
        </div>
      </div>
    </div>
  <br>
  
  <%= link_to 'Back', items_path %>
</div>