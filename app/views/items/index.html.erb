<%= render "layouts/banner"%>

<main class="container">
  <div class="row row-cols-4 row-cols-md-3 col-sm-12 p-md-0 m-md-0 d-flex justify-content-center">

    <% @items.each do |item| %>
      <div class="col-sm-12 col-12 col-md-4">
        <div class="card border-secondary mb-4 card-index" size="50">
          <img class="card-img-top" src="<%= item.image_url%>" height="500"  alt="Card image cap">
          <div class="card-body">
            <h4 class="card-title"><%=item.title%></h4>

            <p class="card-text">Prix : <%=item.price%>â‚¬</p>
            <a><%= link_to "Details", item_path(item.id), class: "btn btn-primary" %></a>
          </div>
        </div>
      </div>
    <% end %>
  </div>

</main>
