
<div class="card-body p-4 p-md-5">
  <h2>Mes précédente commandes</h2>
  <% current_user_orders.each do |order|%>
    <div class="d-flex flex-wrap justify-content-between align-items-center py-3 px-4 mt-3">
      <div class="d-flex flex-column" >
        <p>Numéro de commande: <strong><%= order.id%></strong> &nbsp;</p>
        <p><small class="text-muted">Date de commande:</small> <strong><%= order.created_at.strftime('Le %e %b %Y') %></strong></p>
      </div>
      <div class="d-flex align-items-center">
        Statut:&nbsp; <strong>Complet</strong>
        <a data-toggle="collapse" href="#order-4153148974124" class="d-block ml-3" aria-expanded="true"><i class="collapse-icon"></i></a>
      </div>
    </div>
    <div class="table-responsive collapse show">
      <% order.items.each do |item| %>
        <table class="table table-bordered">
          <tbody>
            <tr>
              <td class="p-4 col-lg-8">
                <div>
                  <h2><%= item.title %></h2> 
                  <div style="height:120px;width:80px" class="pt-3"><%= image_tag item.picture if item.picture.attached? %></div> <!-- IMAGE -->
                </div>
              </td>
              <td class="p-4 col-lg-4">
                <h3><strong><%= item.price %> <i class="fas fa-euro-sign"></i></strong></h3> <!-- PRIX UNITAIRE -->
              </td>
            </tr>
          </tbody>
        <% end %>
          <tfoot>
            <tr>
              <th colspan="3" class="text-right px-4">
                <div style="font-size:20px;border-bottom:1px solid;"><small class="text-muted">Prix total:</small> <strong><%= order.price%> <i class="fas fa-euro-sign"></i></strong></div> <!-- PRIX TOTAL -->
              </th>
            </tr>
          </tfoot>
        </table>
    </div>
  <% end %> 
</div>



