<div class="d-flex justify-content-center align-items-center text-center col-12" style="height:70vh;">   
  <main class="form-signin">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <i class="fas fa-paw" style="font-size:40px"></i>
      <h1 class="h3 mb-3 fw-normal">Vous avez oublié votre mot de passe ?</h1>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="form-floating">
        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
      </div>

      <div class="actions">
        <%= f.submit "M'envoyer les instructions de récupération", class:"w-100 btn btn-lg btn-primary" %>
      </div>
    <% end %>

<%= render "devise/shared/links" %>
  </main>
</div>
