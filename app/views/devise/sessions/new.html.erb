<div class="d-flex justify-content-center align-items-center text-center col-12" style="height:70vh;">   
  <main class="form-signin">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <i class="fas fa-paw" style="font-size:40px"></i>
        <h1 class="h3 mb-3 fw-normal">Connexion</h1>

        <div class="form-floating">
            <div class="field">
              <%= f.label "Email" %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>
        </div>

        <div class="form-floating">
            <div class="field">
              <%= f.label "mot de passe" %><br />
              <%= f.password_field :password, autocomplete: "current-password" %>
            </div>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label "Se souvenir de moi" %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "Connexion", class:"w-100 btn btn-lg btn-primary" %>
        </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </main>
</div>