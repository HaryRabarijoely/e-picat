<div class="d-flex justify-content-center align-items-center text-center col-12" style="height:70vh;">   
  <main class="form-signin">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <i class="fas fa-paw" style="font-size:40px"></i>
        <h1 class="h3 mb-3 fw-normal">Inscrivez vous s'il vous plait</h1>

        <div class="form-floating">
            <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>
        </div>

        <div class="form-floating">
          <div class="field">
            <%= f.label :password %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> caract√®res minimum )</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password" %>
          </div>
        </div>

        <div class="form-floating">
            <div class="field">
              <%= f.label :password_confirmation %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
            </div>
        </div>

        <div class="actions">
          <%= f.submit "Sign up", class:"w-100 btn btn-lg btn-primary" %>
        </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </main>
</div>
