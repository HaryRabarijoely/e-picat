<h2>Items en base de donnée</h2>
<%= link_to "Ajouter un produit", new_admin_item_path, class: 'btn btn-primary' %>

<table class="table table-hover table-sm">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Titre</th>
      <th scope="col">Description</th>
      <th scope="col">Prix</th>
      <th scope="col">Crée le</th>
    </tr>
  </thead>
  <tbody>
  <% @items.each do |item| %>
      <tr>
      <th><%= item.id %></th>
      <th><%= item.title %></th>
      <th><%= item.description %></th>
      <th><%= item.price %></th>
      <th><%= item.created_at.strftime('%e %b %Y') %></th>
      <th><%= link_to 'Editer', edit_admin_item_path(item), class: 'btn btn-primary btn-sm' %></th>
      <th><%= link_to 'Supprimer', admin_item_path(item), data: { method: :delete, confirm: "Êtes vous sûr de vouloir supprimer cet item ?" }, class: 'btn btn-danger btn-sm'%></th>
    </tr>
<% end %>
</tbody>
</table>
