<h2>Utilisateurs en base de donnée</h2>

<table class="table table-hover table-sm">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Email</th>
      <th scope="col">Inscrit le</th>
      <th scope="col">Commandes</th>
      <th scope="col">Total</th>
      <th scope="col">Admin ?</th>
    </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
      <tr>
      <th><%= user.id %></th>
      <th><%= user.email %></th>
      <th><%= user.created_at.strftime('%e %b %Y') %></th>
      <th><%= user.orders.count %></th>
      <th><%= user.total_amount_paid %> €</th>
      <th><%= "OUI" if user.admin %></th>
      <th><%= link_to 'Editer', edit_admin_user_path(user), class: 'btn btn-primary btn-sm' %></th>
      <th><%= link_to 'Supprimer', admin_user_path(user), data: { method: :delete, confirm: "Êtes vous sûr de vouloir supprimer cet utilisateur ?" }, class: 'btn btn-danger btn-sm'%></th>
    </tr>
    <% end %>
  </tbody>
</table>